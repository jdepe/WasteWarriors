<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="10dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="16dp">
                    <TextView
                        android:id="@+id/routeNumberValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Route#"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/binCountNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bin Count"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:id="@+id/binZoneLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bin Zone"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="16dp">
                    <TextView
                        android:id="@+id/routeNumberValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Route#"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/binCountNumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bin Count"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:id="@+id/binZoneLocationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bin Zone"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/getDirectionsButton"
                android:layout_width="288dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Get Directions"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="48dp"
                android:textColor="@color/black"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                app:elevation="2dp"
                android:backgroundTint="#ffa500"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>